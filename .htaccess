# Apache redirects for direct PDF access
RewriteEngine On

# Redirect cv.divesh.me to resume
RewriteCond %{HTTP_HOST} ^cv\.divesh\.me$ [NC]
RewriteRule ^$ /index.html [R=302,L]

# Direct PDF access
RewriteRule ^resume/?$ resume.pdf [L]
RewriteRule ^pdf/?$ resume.pdf [L]

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
